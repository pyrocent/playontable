{
    "headers": [
        {
            "source": "/(.*)",
            "has": [
                {
                    "type": "host",
                    "value": "playontable.com"
                }
            ],
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; script-src 'self' https://cdn.jsdelivr.net 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; img-src 'self' data: blob: https:; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://api.playontable.com https://vitals.vercel-insights.com; manifest-src 'self' https:; frame-ancestors 'self'; base-uri 'self'; form-action 'self';"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        },
        {
            "source": "/(.*)",
            "has": [
                {
                    "type": "host",
                    "value": "api.playontable.com"
                }
            ],
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; connect-src 'self'; frame-ancestors 'none'; base-uri 'self';"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/api/(.*)",
            "has": [
                {
                    "type": "host",
                    "value": "playontable.com"
                }
            ],
            "destination": "https://playontable.com",
            "statusCode": 403
        },
        {
            "source": "/((?!api).*)",
            "has": [
                {
                    "type": "host",
                    "value": "api.playontable.com"
                }
            ],
            "destination": "https://playontable.com",
            "statusCode": 403
        }
    ]
}